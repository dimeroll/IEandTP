@model IEnumerable<Lab1_ICtaTP.Passenger>

@{
    ViewData["Title"] = "Пасажири";
}

<h1>Пасажири</h1>

<p>
    <a asp-action="Create">Додати пасажира</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PassportId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PassportId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PassportId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
